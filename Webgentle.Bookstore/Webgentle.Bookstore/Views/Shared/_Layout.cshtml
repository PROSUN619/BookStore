<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Store Application</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="/images/bootstrap-logo.svg" alt="" width="30" height="24">
                    Book Store
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/home/aboutus">About US</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/home/contactus">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/book/getallbooks">All Books</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <button class="custom-btn btn btn-primary" type="submit">Login</button>
                        <button class="custom-btn btn btn-primary" type="submit">Register</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>    
    <footer class="d-flex flex-wrap justify-content-center align-items-center py-3 fixed-bottom">
        <p class="mb-0 text-muted">Copyright &copy; @DateTime.Now.Year  Book Store</p>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
</body>

</html>
